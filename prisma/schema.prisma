generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Cards     Cards?

  @@map("users")
}

model Cards {
  id        String   @id
  tag       String   @unique
  owner     Users    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId   String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("cards")
}
